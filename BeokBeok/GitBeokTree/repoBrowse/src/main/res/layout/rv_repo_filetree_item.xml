<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="repoFileTree"
            type="com.beok.repobrowse.entity.RepoFileTreeResEntity" />

        <variable
            name="vm"
            type="com.beok.repobrowse.viewmodel.RepoBrowseViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_browse_indicator"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:contentDescription="@null" />

        <ImageView
            android:id="@+id/iv_type"
            srcWithGlide="@{repoFileTree.type.equals(`dir`) ? @string/url_folder_img : @string/url_file_img}"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@{repoFileTree.name}" />

    </LinearLayout>
</layout>